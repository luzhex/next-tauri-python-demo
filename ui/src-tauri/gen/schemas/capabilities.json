{
  "main-capability": {
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "local": true,
    "windows": ["main"],
    "permissions": [
      "path:default",
      "event:default",
      "window:default",
      "app:default",
      "resources:default",
      "menu:default",
      "tray:default",
      "websocket:default",
      {
        "identifier": "shell:allow-execute",
        "allow": [
          {
            "args": false,
            "cmd": "",
            "name": "../../service/bundle/service",
            "sidecar": true
          }
        ]
      },
      {
        "identifier": "shell:allow-kill",
        "allow": [
          {
            "args": false,
            "cmd": "",
            "name": "../../service/bundle/service",
            "sidecar": true
          }
        ]
      },
      {
        "identifier": "http:default",
        "allow": [{ "url": "http://localhost:8040/*" }]
      }
    ]
  }
}
